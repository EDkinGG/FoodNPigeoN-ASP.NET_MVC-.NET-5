@model NewFoodVM
@using FoodPigeoN.Data.Enums;
 
@{
    ViewData["Title"] = "Add a new Food";
}

<div class="row">
    <div class="col-md-8 offset-2">
        <p>
            <h4><center>Add a new Food</center></h4>
        </p>

        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FoodName" class="control-label"></label>
                                <input asp-for="FoodName" class="form-control" />
                                <span asp-validation-for="FoodName" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Price" class="control-label"></label>
                                <input asp-for="Price" type="number" class="form-control" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FoodPicture" class="control-label"></label>
                                <input asp-for="FoodPicture" class="form-control" />
                                <span asp-validation-for="FoodPicture" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CityId" class="control-label"></label>
                                <select asp-for="CityId" class="form-control" asp-items="ViewBag.CityId"></select>
                                <span asp-validation-for="CityId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="FoodCategory" class="control-label"></label>
                                <select asp-for="FoodCategory" class="form-control" asp-items="Html.GetEnumSelectList<FoodCategory>()"></select>
                                <span asp-validation-for="FoodCategory" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TypeId" class="control-label"></label>
                                <select asp-for="TypeId" class="form-control" asp-items="ViewBag.TypeId"></select>
                                <span asp-validation-for="TypeId" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="TagId" class="control-label"></label>
                                <select asp-for="TagId" class="form-control" asp-items="ViewBag.TagId"></select>
                                <span asp-validation-for="TagId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Description" class="control-label"></label>
                                <textarea asp-for="Description" class="form-control"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4 offset-4 text-center">
                        <img width="100%" id="FoodPicturePreview" />
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show all</a>
                    </div>

                </form>

            </div>
        </div>

    </div>
</div>

@section Scripts{ 
    <script>
        $("#FoodPicture").on("change", function () {
            var output = document.getElementById("FoodPicturePreview");
            output.src = $(this).val();
        })
    </script>
}