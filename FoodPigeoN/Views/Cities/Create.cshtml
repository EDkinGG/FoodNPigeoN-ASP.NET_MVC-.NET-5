@model City

@{
    ViewData["Titile"] = "Add a New City";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New City</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Create" >
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group text-center">
                    <img class="border-info rounded-circle" style="max-width: 150px;" id="CityPicturePreview"/>
                    </div>

                    <div class="form-group">
                        <label asp-for="CityPicture" class="control-label"></label>
                        <input asp-for="CityPicture" class="form-control"/>
                        <span asp-validation-for="CityPicture" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CityName" class="control-label"></label>
                        <input asp-for="CityName" class="form-control"/>
                        <span asp-validation-for="CityName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control"/>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right"/>
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var output = document.getElementById('CityPicturePreview');
            output.src = $("#CityPicture").val();
        })
        $("#CityPicture").on("change", function() {
            var output = document.getElementById('CityPicturePreview');
            output.src = $(this).val();
        })
    </script>
}